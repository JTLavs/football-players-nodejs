html
  head
    title Football Players MongoDB
    link(href="/css/styles.css" rel="stylesheet")
    link(href="/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="js/scripts.js")
  body
    nav.navbar.navbar-light.bg-primary.navbar-fixed-top(style="background-color:orange")
      div.container
        ul.nav.navbar-nav
          li 
            a(href='/') Football Players MongoDB
          li
            a(href='/matches') Matches
        ul.nav.navbar-nav.navbar-right
          li
            a#add(href='#add') Add player
          li
            a#filter(href='#filter') Filter
    div.container.starter-template
     div.row#filterpanel(style="border-bottom:1px dashed black;width:500px;padding:5px;margin-bottom:20px;text-align:left;")
          div.row
            form.form-inline(method='get', action='/team')
              label(for='team') Find players by team:
              select(name='team')
                    option(value='all') All
                    option(value='Arsenal') Arsenal
                    option(value='Bournemouth') Bournemouth
                    option(value='Brighton') Brighton
                    option(value='Burnley') Burnley
                    option(value='Chelsea') Chelsea
                    option(value='Crystal Palace') Crystal Palace
                    option(value='Everton') Everton
                    option(value='Huddersfield') Huddersfield
                    option(value='Leicester') Leicester City
                    option(value='Liverpool') Liverpool
                    option(value='Manchester United') Manchester United
                    option(value='Manchester City') Manchester City
                    option(value='Newcastle') Newcastle
                    option(value='Southampton') Southampton
                    option(value='Stoke City') Stoke City
                    option(value='Swansea') Swansea
                    option(value='Tottenham') Tottenham
                    option(value='Watford') Watford
                    option(value='West Brom') West Brom
                    option(value='West Ham') West Ham
                    |
              button(type='submit') Go
          div.row
            form.form-inline(method='get', action='/position')
              label(for='position') Find players by position:
              div-col-md-3
                select(name='position')
                    option(value='all') All
                    option(value='GK') GK
                    option(value='DF') DF
                    option(value='MF') MF
                    option(value='ST') ST
                    |  
                button(type='submit') Go
          div.row
            form.form-inline(method='get', action='/league')
              label(for='league') Find players by league:
              select(name='league')
                    option(value='all') All
                    option(value='Premier League') Premier League
                    option(value='La Liga') La Liga
                    option(value='Bundesliga') Bundesliga
                    option(value='Serie A') Serie A
                    option(value="Ligue 1") Ligue 1  
              button(type='submit') Go
          h5 Close
     div.row#addpanel(style='border-bottom:1px dashed black;padding:5px;width:500px;margin-bottom:20px;text-align:left;')
            form(action='/add', method='post')
               p
               label(for='name') Name:
               |  
               input(type='text', placeholder='Name', name='name')
               p
               label Team:
               |
               select(name='team')
                   option(value='Arsenal') Arsenal
                   option(value='Manchester United') Manchester United
                   option(value='Manchester City') Manchester City
                   option(value='Tottenham') Tottenham
               p
               label Position:
               |  
               select(name='position')
                   option(value='GK') GK
                   option(value='DF') DF
                   option(value='MF') MF
                   option(value='ST') ST
               p
               label Country:
               |  
               select(name='county')
                   option(value='England') England
                   option(value='France') France
                   option(value='Scotland') Scotland
                   option(value='Argentina') Argentina
                   option(value='Spain') Spain
                   option(value='Sweden') Sweden
                   option(value='Northern Ireland') Northern Ireland
                   option(value='Ireland') Ireland
                   option(value='Wales') Wales
                   option(value='Brazil') Brazil
               p
               label League:
               |  
               select(name='league')
                   option(value='Premier League') Premier League
                   option(value='La Liga') La Liga
                   option(value='Bundesliga') Bundesliga
                   option(value='Ligue 1') Ligue 1
                   option(value='Serie A') Serie A
               p
               button.btn.btn-primary(type='submit') Add
            h5 Close
     div.row.displayPlayersTable
        table.footballPlayers(width='60%' align="center")
                each players in footballPlayers
                    tr#player(style="border-bottom:1px solid orange")
                        td #{ players.name }
                        td #{ players.team }
                        td #{ players.goals } gls
                        td
                            a.btn.btn-primary(href='/player/'+players._id) View Details
                            a.btn.btn-danger(href='/delete/'+players._id) Delete Player
                else
                    p No players found
