html
  head
    title HOME
    link(href="/css/styles.css" rel="stylesheet")
    link(href="/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    script(src="js/scripts.js")
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      div.container
        ul.nav.navbar-nav
          li 
            a(href='/') FOOTBALL PLAYER DATABASE
          li
            a#add(href='#') Add player
    div.container.starter-template
      div.row
            form.form-inline(method='get', action='/team')
              label(for='team') Find players by team:
              select(name='team')
                    option(value='all') All
                    option(value='Arsenal') Arsenal
                    option(value='Manchester United') Manchester United
                    option(value='Manchester City') Manchester City
                    option(value='Tottenham') Tottenham
                    |
              button.btn.btn-primary(type='submit') Go
      div.row
            form.form-inline(method='get', action='/position')
              label(for='position') Find players by position:
              div-col-md-3
                select(name='position')
                    option(value='all') All
                    option(value='GK') GK
                    option(value='DF') DF
                    option(value='MF') MF
                    option(value='ST') ST
                    |  
                button.btn.btn-primary.pl(type='submit') Go
      div.row
            form.form-inline(method='get', action='/league')
              label(for='league') Find players by league:
              select(name='league')
                    option(value='all') All
                    option(value='Premier League') Premier League
                    option(value='La Liga') La Liga
                    option(value='Bundesliga') Bundesliga
                    option(value='Serie A') Serie A
                    option(value="Ligue 1") Ligue 1  
              button.btn.btn-primary.pl(type='submit') Go
      div.row#addpanel
            form(action='/add', method='post',style='border:1px dashed black;padding:5px;width:300px;')
               p
               label(for='name') Name:
               |  
               input(type='text', placeholder='Name', name='name')
               p
               label Team:
               |
               select(name='team')
                   option(value='Arsenal') Arsenal
                   option(value='Manchester United') Manchester United
                   option(value='Manchester City') Manchester City
                   option(value='Tottenham') Tottenham
               p
               label Position:
               |  
               select(name='position')
                   option(value='GK') GK
                   option(value='DF') DF
                   option(value='MF') MF
                   option(value='ST') ST
               p
               label Country:
               |  
               select(name='county')
                   option(value='England') England
                   option(value='France') France
                   option(value='Scotland') Scotland
                   option(value='Argentina') Argentina
                   option(value='Spain') Spain
                   option(value='Sweden') Sweden
                   option(value='Northern Ireland') Northern Ireland
                   option(value='Ireland') Ireland
                   option(value='Wales') Wales
                   option(value='Brazil') Brazil
               p
               label League:
               |  
               select(name='league')
                   option(value='Premier League') Premier League
                   option(value='La Liga') La Liga
                   option(value='Bundesliga') Bundesliga
                   option(value='Ligue 1') Ligue 1
                   option(value='Serie A') Serie A
               p
               label Photo:
               input(type='text', placeholder='Image URL', name='img')
               p
               button.btn.btn-primary(type='submit') Add
      div.row.displayPlayersTable
        table.footballPlayers(cellpadding='3px', width='100%')
                th(align='right') Name
                th Team
                th Position
                th Country
                th Goals
                th(colspan='3') Options
                for players in footballPlayers
                    tr.player
                        td #{ players.name }
                        td #{ players.team }
                        td #{ players.position }
                        td #{ players.county }
                        td #{ players.goals }
                        td 
                            a.btn.btn-primary(href='/view?id='+players._id) View
                            a.btn.btn-danger(href='/delete?id='+players._id) Delete
                else
                    p No players found
